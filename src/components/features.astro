---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "1. Graba tu mensaje de voz",
    description:
      "Â¿Acabas de tener una reunion o una idea? Abre tu bot de telegram y graba un mensaje de voz.",
    icon: "mdi:microphone",
  },
  {
    title: "2. El bot procesa tu mensaje",
    description:
      "ResumIA recibe tu mensaje y gracias a la inteligencia artificial avanzada genera un resumen en tan solo unos segundos.",
    icon: "mdi:settings",
  },
  {
    title: "3. Recibe tu resumen desglosado",
    description:
      "Recibe un resumen desglosado de tu mensaje, con las ideas principales y los puntos clave.",
    icon: "mdi:notebook",
  }
];
---

<ContentSection title="Funcionamiento de Resumia" id="features">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
